<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moneytor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_yellow</item>
        <item name="colorPrimaryVariant">@color/dark_sea_green</item>
        <item name="colorOnPrimary">@color/dark_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_red
        </item>
        <item name="colorSecondaryVariant">@color/jonquill</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/candy_pink</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_slate_grey</item>
        <item name="cardBackgroundColor">@color/forest_green</item>
        <item name="colorSurface">@color/dark_grey</item>
        <item name="android:editTextColor">@color/dark_white</item>
    </style>

    <style name="Theme.Moneytor.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Moneytor.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Moneytor.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="filter_select_theme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/filter_select_wrapper_background</item>
    </style>
</resources>